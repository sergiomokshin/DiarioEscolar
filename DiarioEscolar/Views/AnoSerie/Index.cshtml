@model IEnumerable<DiarioEscolar.Models.AnoSerie>

@{
    ViewBag.Title = "Index";
}

<h2>Séries</h2>

<p>
    @Html.ActionLink("Cadastrar nova série", "Create")
</p>
<table class="table table-bordered" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ano)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Serie)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ano)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Serie)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.AnoSerieId }) |
            @Html.ActionLink("Matérias", "Index", "Materia", new { id = item.AnoSerieId }, null) | 
            @Html.ActionLink("Alunos", "Index", "Aluno", new { id = item.AnoSerieId }, null)             
        </td>
    </tr>
}

</table>
