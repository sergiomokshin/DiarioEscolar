@model IEnumerable<DiarioEscolar.Models.Materia>

@{
    ViewBag.Title = "Index";
}

<h2>Matérias</h2>

<p>
    @Html.ActionLink("Cadastrar nova matéria", "Create", new { id = ViewBag.AnoSerieId })
</p>
<table class="table table-bordered" width="100%">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.MateriaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.MateriaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MateriaId })
        </td>
    </tr>
}

</table>
@using (Html.BeginForm()) {
    <p> 
        @Html.ActionLink("Voltar", "Index", "AnoSerie")
    </p>
}
